<UserControl x:Class="HCIZadatak.Validation.Mapa"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCIZadatak.Validation"
             xmlns:xtd="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500" FontSize="15">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

        <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <Image  Stretch="UniformToFill" VerticalAlignment="Stretch" Source="/HCIZadatak;component/Images/novisadmap.png"/>
        </ScrollViewer>
        <Expander ExpandDirection="Right" Template="{StaticResource SimpleExpanderTemp}" Margin="10">
            <Border CornerRadius="10,10,10,10" BorderThickness="10,10,10,10" BorderBrush="#076350" HorizontalAlignment="Left" Margin="0,10,0,20">
                <StackPanel Orientation="Vertical" Background="#076350">
                    <StackPanel Orientation="Horizontal" Margin="5,5,5,5">
                        <Button Name="novilokalbtn" Margin="0,0,10,0" Padding="1,5"  Click="novilokalbtn_Click" Background="Transparent" ToolTip="Novi lokal">
                            <Image Width="48" Height="48" Source="../Images/newlokal.png"/>
                        </Button>
                        <Button Name="novitipbtn" Margin="0,0,10,0" Padding="6" Click="novitipbtn_Click" Background="Transparent" ToolTip="Novi tip lokala">
                            <Image Width="48" Height="48" Source="../Images/newtip.png"/>
                        </Button>
                        <Button Name="novaetiketabtn" Margin="0,0,10,0" Padding="1" Click="novaetiketabtn_Click" Background="Transparent" ToolTip="Nova etiketa">
                            <Image Width="48" Height="48" Source="../Images/newtag.png"/>
                        </Button>
                    </StackPanel>
                    <TabControl Margin="2,2,2,2">

                        <TabItem Header="Lokali" Padding="5,5,5,5" Width="120">
                            <TabItem.CommandBindings>
                                <CommandBinding Command="Delete" CanExecute="ObrisiLokal_CanExecute" Executed="ObrisiLokal_Executed" />
                            </TabItem.CommandBindings>
                            <DataGrid Name="lokaliDG" CanUserAddRows="false" SelectionUnit="FullRow" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Obriši" Padding="5" Command="Delete" CommandParameter="{Binding OznakaTxt}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Oznaka lokala" Binding="{Binding OznakaTxt,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" MinWidth="180"/>
                                    <DataGridTextColumn Header="Ime lokala" Binding="{Binding ImeTxt,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" MinWidth="180"/>
                                </DataGrid.Columns>
                                <DataGrid.RowDetailsTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                            <Image Source="{Binding Ikona,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="10" Height="100"/>
                                            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="Opis:" FontWeight="Bold"/>
                                                    <TextBox Text="{Binding OpisTxt,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" MinWidth="200" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextWrapping="Wrap" />
                                                </StackPanel>
                                                <Border BorderBrush="Black" BorderThickness="0,0,0,2">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Label Content="Etikete:" FontWeight="Bold"/>
                                                        <ListView ItemsSource="{Binding Etikete}">
                                                            <ListView.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <StackPanel Orientation="Horizontal"></StackPanel>
                                                                </ItemsPanelTemplate>
                                                            </ListView.ItemsPanel>
                                                        </ListView>
                                                    </StackPanel>
                                                </Border>
                                                <StackPanel Orientation="Horizontal">
                                                    <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                                                        <CheckBox Content="Rezervacija" VerticalContentAlignment="Center" Height="30" IsChecked="{Binding Path=Rezervacije,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                        <CheckBox Content="Dozvoljeno pušenje" VerticalContentAlignment="Center" Height="30" IsChecked="{Binding Path=Pusenje,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                        <CheckBox Content="Dostupno za invalide" VerticalContentAlignment="Center" Height="30" IsChecked="{Binding Path=Hendikep,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                                            <Label Width="130" Content="Rang cena:"/>
                                                            <ComboBox Width="120" HorizontalAlignment="Right" ItemsSource="{Binding Rang_cena}" SelectedItem="{Binding Cena}"></ComboBox>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                                            <Label Width="130" Content="Služenje alkohola:"/>
                                                            <ComboBox Width="120" HorizontalAlignment="Right" ItemsSource="{Binding Sluzenje_alkohola}" SelectedItem="{Binding Alkohol}"></ComboBox>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                                            <Label Width="130" Content="Otvoren:"/>
                                                            <DatePicker Width="120" HorizontalAlignment="Right" Text="{Binding Path=Datum,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></DatePicker>
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Label Content="Kapacitet:"/>
                                                            <xtd:IntegerUpDown Value="{Binding Path=Kapacitet,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Minimum="0"></xtd:IntegerUpDown>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Label Content="Tip lokala:"/>
                                                            <Label Content="{Binding Tip,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Foreground="GreenYellow"/>
                                                        </StackPanel>
                                                        <!--<StackPanel Orientation="Horizontal">
                                                            <Label Content="Etikete:"/>
                                                            <ListView ItemsSource="{Binding Etikete}"></ListView>
                                                        </StackPanel>-->
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGrid.RowDetailsTemplate>
                            </DataGrid>
                        </TabItem>

                        <TabItem Header="Tipovi lokala" Padding="5,5,5,5" Width="120">
                            <TabItem.CommandBindings>
                                <CommandBinding Command="Delete" CanExecute="ObrisiTip_CanExecute" Executed="ObrisiTip_Executed" />
                            </TabItem.CommandBindings>
                            <DataGrid Name="tipoviDG" CanUserAddRows="false" SelectionUnit="FullRow" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Obriši" Padding="5" Command="Delete" CommandParameter="{Binding Oznaka}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Oznaka tipa" Binding="{Binding Oznaka,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" MinWidth="180" />
                                    <DataGridTextColumn Header="Ime tipa" Binding="{Binding Ime,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" MinWidth="180"/>
                                </DataGrid.Columns>
                                <DataGrid.RowDetailsTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="{Binding Ikona,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Height="100" Margin="10"/>
                                            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
                                                <Label Content="Opis:" HorizontalContentAlignment="Left" HorizontalAlignment="Stretch" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,2"/>
                                                <TextBox TextWrapping="Wrap" Text="{Binding Path=Opis,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGrid.RowDetailsTemplate>
                            </DataGrid>
                        </TabItem>

                        <TabItem Header="Etikete" Padding="5,5,5,5" Width="120">
                            <TabItem.CommandBindings>
                                <CommandBinding Command="Delete" CanExecute="ObrisiEtiketu_CanExecute" Executed="ObrisiEtiketu_Executed" />
                            </TabItem.CommandBindings>
                            <DataGrid Name="etiketeDG" SelectionUnit="FullRow" AutoGenerateColumns="False" CanUserAddRows="false">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Obriši" Padding="5" Command="Delete" CommandParameter="{Binding Oznaka}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Oznaka etikete" Binding="{Binding Oznaka,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" MinWidth="120"/>
                                    <DataGridTemplateColumn Header="Boja etikete" MinWidth="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <xtd:ColorPicker SelectedColor="{Binding Boja, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Opis etikete" Binding="{Binding Opis,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" MinWidth="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                    </TabControl>

                </StackPanel>
            </Border>
        </Expander>
    </Grid>
</UserControl>
